---
import { getSiteMetadata, siteConfig } from "../config/site";
import { getLocaleFromUrl } from "../i18n/ui";

const locale = getLocaleFromUrl(Astro.url);
const metadata = getSiteMetadata(locale);
const linkToCfp = siteConfig.cfpLink.link;
---

<meta charset="utf-8" />

<meta property="og:title" content="Call for proposals" />
<meta property="og:site_name" content={metadata.title} />
<meta property="og:url" content="" />
<meta property="og:description" content={metadata.description} />
<meta property="og:type" content="" />
<meta property="og:image" content={siteConfig.cfpLink.socialCardImage} />

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@UbuConAsia" />
<meta name="twitter:title" content={`${metadata.title} Call for proposals`} />
<meta name="twitter:description" content={metadata.description} />
<meta name="twitter:image" content={siteConfig.cfpLink.socialCardImage} />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" href="/favicon.ico" />
<body>
    <p>
        Page won't redirect if Javescript is disabled. <a href={linkToCfp}
            >In that case, Click here to redirect manually.</a
        >
    </p>
</body>

<script is:inline define:vars={{ linkToCfp }}>
    //redirect
    window.location = linkToCfp;
</script>
